@import vars
@import basic

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

svg
  margin: 1%
  border-radius: 5px

#widget-caller
  position: fixed
  z-index: 10
  top: 20px
  width: 100px
  left: 60%
  margin-left: -50px
  padding: 5px
  border: 1px solid #ccc
  box-shadow: 0 0 1px rgba(0,0,0,0.2)
  border-radius: 5px
  cursor: pointer

#widget
  position: fixed
  z-index: 10
  width: 50%
  left: 50%
  top: -40px
  margin-left: -25%
  margin-top: -40px
  background: rgba(255,255,255,0.8)
  border: 1px solid #ccc
  border-radius: 5px
  box-shadow: 0 0 3px rgba(0,0,0,0.3)
  padding: 10px
  transition(all 0.5s ease-in-out)
  .title
    font-size: 1.4em
    margin-bottom: 5px
  &.active
    top: 50%
  input
    width: 80%
    display: inline-block
    margin-right: 1%
  .btn
    width: 18%
    display: inline-block

#footer
  position: fixed
  z-index: 20
  bottom: 20px
  right: 20px
  padding: 10px
  background: rgba(255,255,255,0.9)
  border: 1px solid #ccc
  box-shadow: 0 0 3px rgba(0,0,0,0.2)
  border-radius: 5px

